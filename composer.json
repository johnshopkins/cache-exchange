{
  "name": "johnshopkins/cache-exchange",
  "description": "A collection of adapters to make swapping out cache library dependencies quick and easy.",
  "homepage": "http://github.com/johnshopkins/cache-exchange",
  "license": "MIT",
  "require": {
    "php": ">=8.0"
  },
  "autoload": {
    "psr-4" : {
      "CacheExchange\\" : ["src/", "tests/"]
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^11.3",
    "predis/predis": "^3.2"
  },
  "scripts": {
    "up": "docker compose up -d",
    "down": "docker compose down --volumes",
    "test": "docker exec -it cache-exchange-php ./vendor/bin/phpunit --display-phpunit-deprecations --display-deprecations --display-errors --display-warnings --display-notices ./tests"
  },
  "suggest": {
    "ext-memcached": "Required for Memcached adapter usage",
    "predis/predis": "Required for Redis adapter usage"
  }
}
